<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TODO: Надо вынести все размеры в values.dimens или нет, надо подумать -->

    <style name="H1_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="H2_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="tab_text_style">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="H2_text_style_unselected">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/unselected_text</item>
    </style>

    <style name="body">
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="H3_text_style">
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="body_green" parent="@style/body">
        <item name="android:textColor">#24B25D</item>
    </style>

    <style name="ChartBtnStyle">
        <item name="android:textAppearance">@style/body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>